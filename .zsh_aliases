# vim and tmux
alias v='nvim'
alias nv='nvim'
alias dot='(cd ~/dotfiles && nvim ~/dotfiles)'

# python3
# alias python='python3'
alias python=~/opt/miniconda3/bin/python

# shortcuts
alias c='clear'
alias b='cd ..'
alias x='exit'
alias ls='ls -G'
alias h='cd ~ && clear'
alias src='source ~/.zshrc'
alias pi='ssh raspberrypi.local -l pi'

# git
alias gs='git status'
alias gb="git branch | grep -v 'zz-'" # I prefix stale branches I want to keep with zz-
alias gdiff='git diff staging...HEAD'
alias gl='pretty_git_log'
alias gv='git diff --name-only | uniq | xargs nvim'

alias lorem='cat ~/dotfiles/placeholders/lorem.txt | pbcopy'
alias hipsum='cat ~/dotfiles/placeholders/hipsum.txt | pbcopy'
